<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    
     >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/alarm_dialog_bg" >

        <TextView
            android:id="@+id/dialog_denglu_warming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/str_alarm_info"
            android:textColor="#55A0FF"
            android:textSize="22sp" />

        <LinearLayout
            android:id="@+id/linear_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_denglu_warming"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_alarm_dev"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dialog_devicename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="A3615"
                android:textColor="#6D6E6D"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineartwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_one"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/devicemodle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_alarm_type"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dialog_devicemodle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="移动侦测"
                android:textColor="#6D6E6D"
                android:textSize="20sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineartwo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dialog_view"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_bg"
                    android:gravity="center"
                    android:text="@string/str_alarm_preview"
                    android:textColor="#D2E7ED"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dialog_cancel"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_bg"
                    android:gravity="center"
                    android:text="@string/str_alarm_ignore"
                    android:layout_marginLeft="40dp"
                    android:textColor="#D2E7ED"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <ImageView 
    android:id="@+id/dialog_cancle_img"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:background="@drawable/close_icon"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_gravity="right"
    />
</FrameLayout>