<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="10dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/funclayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="7dp" >

        <ImageView
            android:id="@+id/funtion_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/safety_protection" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/funtion_image"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/funtion_titile1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_safe_protected"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/funtion_titile2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/str_audio_monitor_tips"
                android:textColor="@color/userinfocolor"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/function_switch_11"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/morefragment_normal_icon" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/divider_img"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/morefragment" />
    <RelativeLayout 
        android:layout_width="match_parent"
       	android:layout_height="wrap_content"     
        android:id="@+id/rl_tips_01"
        android:paddingLeft="10dp"
        >
        <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="8dp"
             android:text="@string/str_alarm_setting_tips1"
             android:textColor="@color/gray"
             android:textSize="16sp" />
	</RelativeLayout>  
	<!-- 移动侦测 -->
    <RelativeLayout
        android:id="@+id/funclayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="7dp" >

        <ImageView
            android:id="@+id/funtion_image2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/motion_detection" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/funtion_image2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/funtion_titile_21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_alarm_type_move"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/funtion_titile_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/str_audio_monitor_tips"
                android:textColor="@color/userinfocolor"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/function_switch_21"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/morefragment_normal_icon" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/divider_img"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/morefragment" />
    <RelativeLayout 
        android:layout_width="match_parent"
       	android:layout_height="wrap_content"     
        android:id="@+id/rl_tips_02"
        android:paddingLeft="10dp"
        >
        <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="8dp"
             android:text="@string/str_alarm_setting_tips2"
             android:textColor="@color/gray"
             android:textSize="16sp" />
	</RelativeLayout>    
	<!-- 防护时间段 -->
    <RelativeLayout
        android:id="@+id/funclayout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="7dp" >

        <ImageView
            android:id="@+id/funtion_image3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/morefragment_warmmessage_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/funtion_image3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/funtion_titile_31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_protected_time"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/funtion_titile_32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="08:00-10:00"
                android:textColor="@color/userinfocolor"
                android:textSize="14sp"
                android:visibility="visible" />            
        </LinearLayout>

        <ImageView
            android:id="@+id/function_arrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/morefragment_next_icon" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/divider_img"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/morefragment" />
    <RelativeLayout 
        android:layout_width="match_parent"
       	android:layout_height="wrap_content"     
        android:id="@+id/rl_tips_02"
        android:paddingLeft="10dp"
        >
        <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="8dp"
             android:text="@string/str_alarm_setting_tips3"
             android:textColor="@color/gray"
             android:textSize="16sp" />
	</RelativeLayout>  	
</LinearLayout>