<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/dialog_background"
        android:padding="18dp" >

        <ImageView
            android:id="@+id/alarm_img"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/device_default_img_bg" />

        <TextView
            android:id="@+id/alarm_datetime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/alarm_img"
            android:layout_marginTop="10dip"
            android:text="2014-08-17 13:00:01"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/alarm_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alarm_datetime_tv"
            android:layout_marginTop="10dip"
            android:src="@drawable/dialog_list_divider"
            android:visibility="gone" />

        <Button
            android:id="@+id/alarm_lookup_video_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/alarm_divider"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_selector_blue"
            android:text="@string/str_alarm_check_video"
            android:textColor="@drawable/btn_clolr_1"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>