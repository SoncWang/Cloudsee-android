<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/more_fragment_color3"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/top_bar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/more_usertop"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/more_fragment_color4" >

                <ImageView
                    android:id="@+id/more_head_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/morefragment_head_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/more_head_img"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/more_uesrname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_name"
                        android:textColor="@color/more_devicename"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/last_time"
                            android:textColor="@color/more_fragment_color2"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/more_lasttime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2014-09-22"
                            android:textColor="@color/more_fragment_color2"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/more_modify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more_modify"
                            android:textColor="@color/more_fragment_color2"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/more_findpassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/more_findpassword"
                            android:textColor="@color/more_fragment_color2"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <ListView
                android:id="@+id/more_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#EBEAEB" >
            </ListView>

            <RelativeLayout
                android:id="@+id/more_cancle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/more_cancel"
                    android:textColor="@color/more_fragment_color3"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>