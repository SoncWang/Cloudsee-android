<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/mydevice_relative"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/mydevice_img"
            android:alpha="0.6"
            android:background="@color/black" >
        </LinearLayout>

        <ImageView
            android:id="@+id/mydevice_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/light_bg" >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mydevice_relative"
        android:alpha="0.6"
        android:background="@color/black" >

        <ImageView
            android:id="@+id/help_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:background="@drawable/help_rightup_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/help_img"
            android:layout_marginRight="80dp"
            android:layout_marginTop="5dp"
            android:text="@string/str_help_zero"
            android:textColor="@color/more_fragment_color3"
            android:textSize="24sp" />
    </RelativeLayout>

</LinearLayout>