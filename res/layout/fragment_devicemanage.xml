<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/top_bar_layout" />

    <LinearLayout
        android:id="@+id/datalayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white" >

            <HorizontalScrollView
                android:id="@+id/hsv_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/devmorere"
                android:background="@color/video_channelcolor"
                android:fadingEdge="@null"
                android:scrollbars="none" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:id="@+id/hsv_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="100dp"
                        android:layout_height="4dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/quickinstall_btn_normal" />
                </RelativeLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:id="@+id/devmorere"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/videoedit_pull_bgtwo" >

                <ImageView
                    android:id="@+id/devmore"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/videoedit_pull_icon" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/relalist"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/video_channelcolor"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/device_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:textColor="@color/more_fragment_color2"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:id="@+id/devmore_hie"
                    android:layout_width="52dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/videoedit_pull_bgtwo" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/videoedit_pulled_icon" />
                </RelativeLayout>
            </RelativeLayout>

            <ListView
                android:id="@+id/device_listView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relalist"
                android:layout_marginTop="10dp"
                android:background="@drawable/videoedit_pull_bg"
                android:divider="@color/channel_color_10"
                android:dividerHeight="1px"
                android:fadingEdge="none"
                android:visibility="gone" >
            </ListView>

            <android.support.v4.view.ViewPager
                android:id="@+id/manage_pagerer"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </android.support.v4.view.ViewPager>
        </RelativeLayout>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar"
        layout="@layout/no_device_help"
        android:visibility="gone" >
    </include>

    <RelativeLayout
        android:id="@+id/refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar"
        android:visibility="gone" >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@drawable/mydevice_error" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/no_device_lead_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/no_device" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/no_device_lead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:textColor="@android:color/primary_text_light_nodisable" />

            <TextView
                android:id="@+id/no_device_lead_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/str_no_device_lead2"
                android:textColor="@color/quickinstall_btn_normal"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>